<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shape"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/login"
        android:layout_width="46dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:text="Login"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="top"
        android:textSize="18sp"
        />
    <View
        android:background="@drawable/img_405941"
        android:layout_width="20dp"
        android:layout_height="19dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="74dp"/>

    <TextView
        android:id="@+id/welcome_bac"
        android:layout_width="177dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:text="Welcome back , Rohit thakur"
        android:gravity="top"
        android:textColor="#5B5B5B"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="231dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/img_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />
    <TextView
        android:id="@+id/enter_your_"
        android:layout_width="228dp"
        android:layout_height="26dp"
        android:text="Enter Your Mobile Number"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="401dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="94dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#F2796B"
        />

    <EditText
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_marginTop="458dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/background_shape_ed"
        android:hint="Enter Number"
        android:paddingStart="15dp"
        android:textColor="#545151"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:textSize="12sp"
        android:textColor="#99000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="512dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="263dp"
        android:text="Change Number ?"/>
    <Button
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:background="@drawable/background_shape_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="565dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="LOGIN"
        android:layout_marginLeft="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"/>
    <TextView
        android:layout_width="72dp"
        android:layout_height="15dp"
        android:text="Or Login with"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="640dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="164dp"
        android:textColor="#757171"
        android:textSize="12sp"/>
    <View
        android:layout_width="105.6dp"
        android:layout_height="1dp"
        android:background="@drawable/gachngang"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="650dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="51dp"
        />
    <View
        android:layout_width="105.6dp"
        android:layout_height="1dp"
        android:background="@drawable/gachngang"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="650dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="244dp"
        />
    <View
        android:layout_width="21dp"
        android:layout_height="21dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="695dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp"
        android:background="@drawable/google_icon"
        />
    <TextView
        android:layout_width="51dp"
        android:layout_height="21dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Google"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="696dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="187dp"
        />
    <TextView
        android:layout_width="220dp"
        android:layout_height="18dp"
        android:text="You Don't have an account ? Sign up"
        android:textColor="#99000000"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="751dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="97dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>